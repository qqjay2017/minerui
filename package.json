{
  "name": "@minerui/minerui",
  "version": "3.1.7",
  "description": "京东风格的轻量级移动端 Vue2、Vue3 组件库（支持小程序开发）",
  "main": "dist/minerui.umd.js",
  "module": "dist/minerui.es.js",
  "style": "dist/style.css",
  "typings": "dist/index.d.ts",
  "keywords": [
    "minerui",
    "minerui2",
    "minerui3",
    "vue",
    "vue3",
    "webpack",
    "vue component",
    "vue3 component",
    "vite",
    "jdc",
    "jdcfe"
  ],
  "author": "jdcfe",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "README.md",
    "package.json",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "checked": "npm run generate:file && tsc",
    "dev": "npm run checked && vite --open --force",
    "build:site": "npm run checked && vite build",
    "build:gh-pages": "npm run checked && vite build --base=/minerui/",
    "build:site:oss": "npm run checked && vite build --base=/minerui/3x/",
    "build": "npm run checked && vite build --config vite.config.build.ts && vite build --config vite.config.build.disperse.ts && npm run generate:types && npm run generate:themes && vite build --config vite.config.build.css.ts",
    "serve": "vite preview",
    "upload": "yarn build:site:oss && node ./jd/upload.js",
    "add": "node jd/createComponentMode.js",
    "publish:next": "npm publish --tag=next",
    "generate:file": "node jd/generate-minerui.js",
    "generate:types": "node jd/generate-types.js",
    "generate:themes": "node jd/generate-themes.js",
    "prepare": "husky install",
    "test": "jest",
    "release": "standard-version -a",
    "codeformat": "prettier --write ."
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "node ./jd/updateChangelog.js"
    }
  },
  "dependencies": {
    "pinyin": "^2.10.2",
    "vue-router": "^4.0.11",
    "sass": "^1.34.0"
  },
  "devDependencies": {
    "vue": "^3.2.19",
    "@commitlint/cli": "^10.0.0",
    "@commitlint/config-conventional": "^10.0.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.31",
    "@types/pinyin": "^2.8.3",
    "@vitejs/plugin-legacy": "^1.4.0",
    "@vitejs/plugin-vue": "^1.2.2",
    "@vue/compiler-sfc": "^3.0.11",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "@vue/test-utils": "^2.0.0-rc.6",
    "autoprefixer": "^10.3.4",
    "axios": "^0.21.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^7.0.0-0",
    "fs-extra": "^9.1.0",
    "highlight.js": "^10.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.0",
    "prettier": "^2.0.0",
    "standard-version": "^9.3.0",
    "swiper": "6.5.1",
    "transliteration": "^2.2.0",
    "ts-jest": "^26.5.5",
    "typescript": "^4.1.5",
    "vite": "^2.3.4",
    "vite-plugin-md": "^0.11.0",
    "vue-jest": "^5.0.0-alpha.7"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "vue/no-unused-components": "off",
      "no-debugger": "off"
    }
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.{ts,tsx,js,vue,scss}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jdf2e/minerui.git"
  }
}
